run = "./start.sh"

hidden = [".deno"]

language = "deno"

[languages.deno]
pattern = "**/*.{ts,js}"
[languages.deno.languageServer]
start = ["deno", "lsp"]
[languages.deno.languageServer.initializationOptions]
enable = true
lint = true

[env]
DENO_DIR = "/home/runner/${REPL_SLUG}/.deno"

[nix]
channel = "stable-22_11"

[[ports]]
localPort = 3000
externalPort = 80
[[ports]]
localPort = 300
externalPort = 3000

